}

.reply-author { font-weight: 600; flex-shrink: 0; }

.reply-preview {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Reply bar above input */
.reply-bar {
  display: flex;
  align-items: center;
  gap: 8px;
