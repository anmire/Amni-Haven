.modal-settings {
  max-width: 460px;
  max-height: 85vh;
  overflow-y: auto;
  padding: 0;
}

.settings-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 24px 12px;
  position: sticky;
  top: 0;
  background: var(--bg-card);
  z-index: 1;
