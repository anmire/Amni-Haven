}

.link-preview-desc {
  font-size: 12px;
  color: var(--text-secondary);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.gif-provider-tabs { display: flex; gap: 4px; margin-bottom: 8px; }
.gif-tab { padding: 4px 12px; border: 1px solid var(--border); border-radius: var(--radius-sm); background: var(--bg-primary); color: var(--text-secondary); cursor: pointer; font-size: 12px; transition: var(--transition); }
.gif-tab.active { background: var(--accent); color: #fff; border-color: var(--accent); }
.gif-tab:hover:not(.active) { background: var(--bg-hover); }
.dm-section { border-top: 1px solid var(--border); margin-top: 8px; padding-top: 8px; }
.dm-section-title { font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px; color: var(--text-muted); padding: 4px 12px; font-weight: 600; }
.dm-item { display: flex; align-items: center; padding: 6px 12px; cursor: pointer; border-radius: var(--radius-sm); transition: var(--transition); color: var(--text-secondary); }
.dm-item:hover { background: var(--bg-hover); color: var(--text-primary); }
.dm-item.active { background: var(--bg-active); color: var(--text-primary); }
.dm-user { font-size: 13px; }
.user-quick-actions { display: flex; gap: 2px; margin-left: auto; opacity: 0; transition: opacity 0.15s; }
.user-item:hover .user-quick-actions { opacity: 1; }
.uqa-btn { background: none; border: none; cursor: pointer; font-size: 12px; padding: 2px 4px; border-radius: 3px; transition: var(--transition); opacity: 0.7; }
.uqa-btn:hover { background: var(--bg-hover); opacity: 1; }

/* â”€â”€ Context Menu (right-click) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
.context-menu {
  position: fixed;
  z-index: 9000;
  background: var(--bg-card);
  border: 1px solid var(--border-light);
  border-radius: var(--radius);
  box-shadow: 0 8px 24px rgba(0,0,0,0.4);
  padding: 6px 0;
  min-width: 160px;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}
.context-menu-item {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 7px 14px;
  font-size: 13px;
  color: var(--text-secondary);
  cursor: pointer;
  transition: background var(--transition), color var(--transition);
}
.context-menu-item:hover {
  background: var(--bg-hover);
  color: var(--text-primary);
}
.context-menu-danger {
  color: var(--danger);
}
.context-menu-danger:hover {
  background: rgba(240, 71, 71, 0.12);
  color: var(--danger);
}
.context-menu-divider {
  height: 1px;
  background: var(--border);
  margin: 4px 8px;
}

/* â”€â”€ Avatar Shapes â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
.avatar-circle { border-radius: 50%; }
.avatar-rounded { border-radius: 6px; }
.avatar-hex { clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%); border-radius: 0; }
.avatar-triangle { clip-path: polygon(50% 0%, 100% 100%, 0% 100%); border-radius: 0; }
.avatar-squircle { border-radius: 28%; }

/* â”€â”€ Avatar Settings UI â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
.avatar-shape-picker { display: flex; gap: 8px; padding: 6px 0; }
.avatar-shape-btn {
  width: 36px; height: 36px;
  display: flex; align-items: center; justify-content: center;
  background: var(--bg-tertiary); border: 2px solid var(--border);
  border-radius: var(--radius-sm); cursor: pointer;
  transition: all var(--transition);
}
.avatar-shape-btn:hover { border-color: var(--text-secondary); }
.avatar-shape-btn.active { border-color: var(--accent); box-shadow: 0 0 6px var(--accent-glow); }
.shape-preview {
  width: 20px; height: 20px;
  background: var(--accent);
}
.shape-circle { border-radius: 50%; }
.shape-rounded { border-radius: 4px; }
.shape-hex { clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%); }
.shape-triangle { clip-path: polygon(50% 0%, 100% 100%, 0% 100%); }
.shape-squircle { border-radius: 28%; }
.avatar-color-row { display: flex; align-items: center; gap: 8px; }
.avatar-color-preview { width: 24px; height: 24px; border-radius: 50%; border: 2px solid var(--border); flex-shrink: 0; }
.hue-slider { -webkit-appearance: none; appearance: none; height: 8px; border-radius: 4px; background: linear-gradient(to right, hsl(0,80%,55%), hsl(60,80%,55%), hsl(120,80%,55%), hsl(180,80%,55%), hsl(240,80%,55%), hsl(300,80%,55%), hsl(360,80%,55%)); outline: none; }
.hue-slider::-webkit-slider-thumb { -webkit-appearance: none; width: 16px; height: 16px; border-radius: 50%; background: #fff; border: 2px solid var(--border); cursor: pointer; box-shadow: 0 1px 4px rgba(0,0,0,0.3); }
.avatar-upload-row { display: flex; align-items: center; gap: 8px; }
.avatar-upload-preview { width: 36px; height: 36px; border-radius: 50%; background: var(--bg-tertiary); border: 2px solid var(--border); overflow: hidden; display: flex; align-items: center; justify-content: center; }
.avatar-upload-preview img { width: 100%; height: 100%; object-fit: cover; }

/* â”€â”€ Layout Density Presets â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
.density-picker { display: flex; gap: 6px; padding: 4px 0; }
.density-btn {
  display: flex; align-items: center; gap: 6px;
  padding: 6px 12px; border-radius: var(--radius-sm);
  background: var(--bg-tertiary); border: 2px solid var(--border);
  color: var(--text-secondary); font-size: 12px; cursor: pointer;
  transition: all var(--transition);
}
.density-btn:hover { border-color: var(--text-secondary); color: var(--text-primary); }
.density-btn.active { border-color: var(--accent); color: var(--accent); box-shadow: 0 0 6px var(--accent-glow); }

/* Compact density */
[data-density="compact"] .message-avatar { width: 28px; height: 28px; font-size: 11px; }
[data-density="compact"] .message-row { padding: 2px 8px; gap: 8px; }
[data-density="compact"] .message-content { font-size: 12.5px; }
[data-density="compact"] .message-author { font-size: 12.5px; }
[data-density="compact"] .message-time { font-size: 10px; }
[data-density="compact"] .message-compact { padding: 0px 8px 0px 44px; }
[data-density="compact"] .msg { margin-bottom: 1px; }

/* Spacious density */
[data-density="spacious"] .message-avatar { width: 42px; height: 42px; font-size: 16px; }
[data-density="spacious"] .message-row { padding: 8px 16px; gap: 14px; }
[data-density="spacious"] .message-content { font-size: 14.5px; line-height: 1.55; }
[data-density="spacious"] .message-author { font-size: 15px; }
[data-density="spacious"] .message-time { font-size: 12px; }
[data-density="spacious"] .message-compact { padding: 3px 16px 3px 72px; }
[data-density="spacious"] .msg { margin-bottom: 4px; }
