}

.btn-emoji:hover { color: var(--text-primary); background: var(--bg-tertiary); }

.emoji-picker {
  position: absolute;
  bottom: 100%;
  left: 48px;
  margin-bottom: 8px;
  background: var(--bg-card);
  border: 1px solid var(--border-light);
  border-radius: 12px;
  padding: 10px;
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  max-width: 320px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.4);
  z-index: 1000;
}

.emoji-item {
