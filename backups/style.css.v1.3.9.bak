  flex-direction: column;
  gap: 8px;
  margin-bottom: 12px;
}

.ban-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
  padding: 8px 10px;
  background: var(--bg-tertiary);
  border-radius: var(--radius-sm);
}

.ban-info {
