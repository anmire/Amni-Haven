}

.btn-unban {
  flex-shrink: 0;
  background: var(--success) !important;
  color: white !important;
}

.btn-unban:hover { opacity: 0.85; }

.ban-actions {
  display: flex;
  gap: 4px;
  flex-shrink: 0;
  align-items: center;
}

.btn-delete-user {
  flex-shrink: 0;
  background: var(--danger) !important;
  color: white !important;
  font-size: 12px;
  padding: 4px 8px !important;
}

.btn-delete-user:hover { opacity: 0.85; }

.chat-image[src$=".gif"],
