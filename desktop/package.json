{
  "name": "haven-desktop",
  "version": "0.1.0",
  "description": "Haven Desktop â€” native client with per-app audio streaming via virtual audio cable",
  "main": "src/main.js",
  "author": "ancsemi",
  "license": "MIT-NC",
  "scripts": {
    "start": "node -e \"const p=require('electron');require('child_process').execFileSync(p,['.'],{stdio:'inherit'})\"",
    "dev": "cross-env NODE_ENV=development node -e \"const p=require('electron');require('child_process').execFileSync(p,['.'],{stdio:'inherit'})\"",
    "patch-icon": "node -e \"const{execFileSync}=require('child_process');const p=require('path');execFileSync(p.join(__dirname,'node_modules','rcedit','bin','rcedit-x64.exe'),[p.join(__dirname,'node_modules','electron','dist','electron.exe'),'--set-icon',p.join(__dirname,'build','icon.ico'),'--set-version-string','ProductName','Haven','--set-version-string','FileDescription','Haven Desktop','--set-version-string','CompanyName','Haven','--set-version-string','InternalName','haven','--set-version-string','OriginalFilename','Haven.exe'],{stdio:'inherit'})\"",
    "postinstall": "npm run patch-icon",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0",
    "rcedit": "^5.0.2",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.haven.desktop",
    "productName": "Haven",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "preload/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "audio-drivers/",
        "to": "audio-drivers",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Network"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "include": "installer/nsis-hooks.nsh",
      "runAfterFinish": true
    }
  }
}
